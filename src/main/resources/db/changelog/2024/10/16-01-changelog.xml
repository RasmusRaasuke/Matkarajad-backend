<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <!-- Create camping route table     -->
    <changeSet id="1728495688277-1" author="artur">
        <createTable tableName="camping_route">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_campingroute"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="location" type="VARCHAR(255)"/>
            <column name="thumbnail_url" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>


    <!-- Creating association table -->
    <changeSet id="1729068830818-1" author="artur">
        <createTable tableName="camping_route_comment">
            <column name="camping_route_entity_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="comment_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- unique constraints for comment_id -->
    <changeSet id="1729068830818-2" author="artur">
        <addUniqueConstraint columnNames="comment_id" constraintName="uc_camping_route_comment_comment"
                             tableName="camping_route_comment"/>
    </changeSet>

    <!-- foreign key constraints -->
    <changeSet id="1729068830818-3" author="artur">
        <addForeignKeyConstraint baseColumnNames="camping_route_entity_id" baseTableName="camping_route_comment"
                                 constraintName="fk_camroucom_on_camping_route_entity" referencedColumnNames="id"
                                 referencedTableName="camping_route"/>
    </changeSet>
    <changeSet id="1729068830818-4" author="artur">
        <addForeignKeyConstraint baseColumnNames="comment_id" baseTableName="camping_route_comment"
                                 constraintName="fk_camroucom_on_comment_entity" referencedColumnNames="id"
                                 referencedTableName="comment"/>
    </changeSet>

</databaseChangeLog>